import tkinter as tk
from TestConnectClass import make_reservation_window
from modify_reservation_screen1  import modify_reservation_window
from TestConnectClass3 import cancel_reservation_window
from TestConnectClass4 import manager_report_window

def main():
     root = tk.Tk()

     #window pop up name
     #size of window info
     root.title("Best Hotel!!!!!")
     root.configure(background="skyblue")
     root.geometry("600x400+50+50")
     root.minsize(800,800)
     root.resizable(width=True, height=True)


     #NOTE:have to edit this.
     #why isn't font size changing even with " font="..."" "
     #label = tk.Label(root, text="BEST HOTEL", font=1000)
     #label.pack(expand=True)

     #frames in order to do 2x2 frame display
     frameTOP = tk.Frame(root, width=200, height=200)
     frameTOP.pack(side=tk.TOP, expand=True, fill="both")
     frameTOP.configure(background="pink")

     frameTOP1 = tk.Frame(root, width=200, height=200)
     frameTOP1.pack(side=tk.TOP, expand=True, fill="both")
     frameTOP1.configure(background="pink")

     frameBOTTOM = tk.Frame(root, width=200, height=200)
     frameBOTTOM.pack(side=tk.TOP,expand=True, fill="both")
     frameBOTTOM.pack(expand=True)

     #title "Best hotel" which is in the top background frame
     title = tk.Label(frameTOP, text="BEST HOTEL", font=("Times New Roman", 100))
     title.pack(expand=True, fill="both")

     #4 white frame boxes which will hold buttons to link to different features
     #NOTE: modify, cancel, and manager report buttons work but need
     #the actual classes for them to link to, as of right now they
     #link to "test cases"/classes
     #since sprint/progess hasn't reached those yet 

     #make and modify frames are both 
     #in middle backgrounf frame

     #make reservation frame with description and button
     makeres_frame1 = tk.Frame(frameTOP1, width=200, height=200)
     makeres_frame1.pack(side=tk.LEFT,expand=True, fill="both")
     makeres_frame1.configure(background="white", highlightbackground="skyblue", highlightcolor="skyblue", highlightthickness=15)

     make_description_title = tk.Label(makeres_frame1, text="Make Reservation: ", font=("Times New Roman", 25))
     make_description_title.pack()
     make_description_title.configure(background="white")
     make_description = tk.Label(makeres_frame1, text="Will be asked to select dates for a reservation.\n Will be asked number of guests for a room. \nWill be asked room type interested in.",font="150")
     make_description.pack()
     make_description.configure(background="white")

     make_reservation = tk.Button(makeres_frame1, text="Make Reservation", command=make_reservation_window)
     make_reservation.pack()
     make_reservation.place(relx=0.5, rely=0.8, anchor=tk.CENTER)

     #modify reservation frame with description and button
     modifyres_frame2 = tk.Frame(frameTOP1, width=200, height=200)
     modifyres_frame2.pack(side=tk.LEFT,expand=True, fill="both")
     modifyres_frame2.configure(background="white",highlightbackground="skyblue", highlightcolor="skyblue", highlightthickness=15)

     modify_description_title = tk.Label(modifyres_frame2, text="Modify Reservation: ", font=("Times New Roman", 25))
     modify_description_title.pack()
     modify_description_title.configure(background="white")
     modify_description = tk.Label(modifyres_frame2, text="Will be asked for reservation number. \nWill be redirected to update information page.",font="150")
     modify_description.pack()
     modify_description.configure(background="white")

     modify_reservation = tk.Button(modifyres_frame2, text="Modify Reservation", command=modify_reservation_window)
     modify_reservation.pack()
     modify_reservation.place(relx=0.5, rely=0.8, anchor=tk.CENTER)

     #cancel and manager report frames are both in 
     #bottom background frame

     #cancel reservation frame with description and button
     cancelres_frame3 = tk.Frame(frameBOTTOM, width=200, height=200)
     cancelres_frame3.pack(side=tk.LEFT,expand=True, fill="both")
     cancelres_frame3.configure(background="white",highlightbackground="skyblue", highlightcolor="skyblue", highlightthickness=15)

     cancel_description_title = tk.Label(cancelres_frame3, text="Cancel Reservation: ", font=("Times New Roman", 25))
     cancel_description_title.pack()
     cancel_description_title.configure(background="white")
     cancel_description = tk.Label(cancelres_frame3, text="Will be asked for reservation number. \n Will be asked reason for cancellation",font="150")
     cancel_description.pack()
     cancel_description.configure(background="white")

     cancel_reservation = tk.Button(cancelres_frame3, text="Cancel Reservation", command=cancel_reservation_window)
     cancel_reservation.pack()
     cancel_reservation.place(relx=0.5, rely=0.8, anchor=tk.CENTER)

     #manager info report frame with description and button
     managerrep_frame4 = tk.Frame(frameBOTTOM, width=200, height=200)
     managerrep_frame4.pack(side=tk.LEFT,expand=True, fill="both")
     managerrep_frame4.configure(background="white",highlightbackground="skyblue", highlightcolor="skyblue", highlightthickness=15)

     report_description_title = tk.Label(managerrep_frame4, text="Manager Report: ", font=("Times New Roman", 25))
     report_description_title.pack()
     report_description_title.configure(background="white")
     report_description = tk.Label(managerrep_frame4, text="Will be asked for Manager ID number. \n Will return hotel information report",font="150")
     report_description.pack()
     report_description.configure(background="white")

     manager_report = tk.Button(managerrep_frame4, text="Manager Report", command=manager_report_window)
     manager_report.pack()
     manager_report.place(relx=0.5, rely=0.8, anchor=tk.CENTER)

     root.mainloop()

if __name__ == "__main__":
     main()

